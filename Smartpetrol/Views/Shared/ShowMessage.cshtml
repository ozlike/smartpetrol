@model MessageModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Model.Title</title>
    <link href="/css/general.css" rel="stylesheet" asp-append-version="true" />
    <style>
        h1{
            display: block;
            font-size: 1.8rem;
            width: 100%;
            text-align: center;
            font-weight: bold;
            margin-top: 25vh;
            color: @Html.Raw(Model.Error ? "red" : "black");
        }
    </style>
</head>
<body>
    <h1>@Model.Message</h1>

    <script type="text/javascript">
    document.addEventListener("DOMContentLoaded", function () {
        setTimeout(() => {
            window.location.href = "@(Model.Url)";
        }, @(Model.SecondsToRedirect) * 1000);
    });
    </script>
</body>
</html>