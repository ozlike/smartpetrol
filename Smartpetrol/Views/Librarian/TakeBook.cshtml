
@{
    ViewData["Title"] = "TakeBook";
}

<h2>TakeBook</h2>



<div>Навание: @Model.Title</div>
<div>Автор: @Model.Author</div>
<div>Жанр:  @Model.Genre</div>
<div>Издатель: @Model.Publisher</div>


@using (Html.BeginForm("TakeBook", "Librarian", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <input type="text" name="Id" value="@Model.Id" hidden />
    <input type="submit" value="Принять книгу" class="button no-select" />
}