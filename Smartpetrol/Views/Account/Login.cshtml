
@{
    ViewData["Title"] = "Login";
}

@model Smartpetrol.Models.Users.LoginUserViewModel

<div class="content">
    <h2 class="main-title">Вход</h2>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { returnUrl = ViewData["ReturnUrl"] }))
    {
        @Html.AntiForgeryToken()

        <label asp-for="Email" class="middle-sign"></label>
        <input asp-for="Email" type="email" class="input-text" />
        <span asp-validation-for="Email"></span>

        <label asp-for="Password" class="middle-sign"></label>
        <input asp-for="Password" type="password" class="input-text" />
        <span asp-validation-for="Password"></span>

        <div>
            <input asp-for="RememberMe" checked />
            <label asp-for="RememberMe"></label>
        </div>

        <div asp-validation-summary="ModelOnly"></div>

        <input type="submit" value="Войти" class="button no-select" />
    }
</div>